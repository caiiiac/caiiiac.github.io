</span><span class='line'>NSUnderlineStyleAttributeName;        //下划线，value是NSNumber
</span><span class='line'>NSStrokeColorAttributeName;           //描绘边颜色，value是UIColor
</span><span class='line'>NSStrokeWidthAttributeName;           //描边宽度，value是NSNumber
</span><span class='line'>NSShadowAttributeName;                //阴影，value是NSShadow对象
